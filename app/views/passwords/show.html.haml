- title "New Password"
- @body_class = "pages"


.col-md-6.col-md-offset-3.form-box

  %h1.heading
    New Password
  
  = form_tag reset_password_path(params[:id]), :method => :put, :novalidate => "true", :class => "form-horizontal" do

    .control-group
      = label_tag :password, "Password", :class => "control-label"
      .controls
        = password_field_tag :password
        
    .form-actions
      %button.button.button-primary{:type => "submit"}
        = t("continue")
        %span.glyphicon.glyphicon-arrow-right.icon-white
